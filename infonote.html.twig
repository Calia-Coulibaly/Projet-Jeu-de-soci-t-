{% extends "page/note.html.twig" %}
{% block note %}
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
		<div class="container-fluid">
			<a href="?page=accueil" style="width: 10%;"><img src="img/test.png" style="width: 50%;"></a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarNavAltMarkup">
				<div class="navbar-nav">
					{% if session.acces =="oui" %}
						{# {{dump (session)}} #}
						<a class="nav-link" href="?page=accueil">Accueil</a>
						<a class="nav-link" href="?page=jeux">Jeux</a>
						<a class="nav-link" href="?page=mesjeux">Mes jeux</a>
						<a class="nav-link" href="?page=profil">Profil</a>
						<a class="nav-link" href="?page=deconnect">Deconnexion</a>
					{% else %}
						<a class="nav-link" href="?page=accueil">Accueil</a>
						<a class="nav-link" href="?page=jeux">Jeux</a>
						<a class="nav-link" href="?page=connect">Connexion</a>
					{% endif %}
				</div>
			</div>
		</div>
	</nav>
	<div id="notcom">
		<form method="post" action="?page=jeux" class="well">
			<fieldsetclass="form-group">
				<legend style='text-align:center;'>Noter le jeu</legend>
				<div class="form-group row" style="contenair-fluid text-center">
					<label for="note" class="col-sm-2 col-form-label col-form-label-sm">Choisissez un nombre </label>
					<div class="col-sm-10">
						<select name="note" id="note">
            	<option>          </option>
							<option name="note" value="1">1</option>
							<option name="note" value="2">2</option>
							<option name="note" value="3">3</option>
							<option name="note" value="4">4</option>
							<option name="note" value="5">5</option>
						</select>
					</div>
				</div>
				<input type="hidden" id="nom" name="nom" value="{{noter}}"/>
				<input type="hidden" id="pseudo" name="pseudo" value="{{session.pseudo}}"/>
        	<div class="contenair-fluid text-center">
				<input type="submit" class="btn btn-primary bg-dark" name="valider_note" value="Valider"/>
        </div>
			</fieldset>
		</form>
<br>
		<form method="post" action="?page=jeux" class="well">
			<fieldsetclass="form-group">
				<legend style='text-align:center;'>Commenter le jeu</legend>
				<div class="form-group row">
					<label for="commentaire" class="col-sm-2 col-form-label col-form-label-sm"></label>
					<div class="col-sm-10">
						<input type="text" id="commentaire" class="form-control form-control-sm" name="commentaire" placeholder="Commentaires"/>
					</div>
				</div>
			</div>
			<input type="hidden" id="nom" name="nom" value="{{noter}}"/>
			<input type="hidden" id="pseudo" name="pseudo" value="{{session.pseudo}}"/>
      	<div class="contenair-fluid text-center">
        <br>
			<input type="submit" class="btn btn-primary bg-dark" name="valider_commentaire" value="Valider"/>
      </div>
		</fieldset>
	</form>

</div>{% endblock %}
